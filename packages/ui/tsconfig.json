{
  "compilerOptions": {
    "target": "es2015",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "../stellar/web/src/components/wallet-popover.tsx", "../stellar/web/src/components/footer.tsx", "../stellar/web/src/components/oldFooter.tsx"],
  "exclude": ["node_modules"]
}
